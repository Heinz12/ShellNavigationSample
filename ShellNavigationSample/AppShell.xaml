<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShellNavigationSample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShellNavigationSample"
    xmlns:views="clr-namespace:ShellNavigationSample.Views"
    Title="ShellNavigationSample"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="Main" />

    <ShellContent ContentTemplate="{DataTemplate views:PageAView}" Route="MainA" />
    <ShellContent ContentTemplate="{DataTemplate views:PageBView}" Route="MainB" />

</Shell>
