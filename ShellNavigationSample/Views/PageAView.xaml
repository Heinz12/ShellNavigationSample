<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ShellNavigationSample.Views.PageAView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:ShellNavigationSample.ViewModels"
    Title="PageAView"
    x:DataType="viewModels:PageAViewModel">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Page A"
            VerticalOptions="Center" />
        <Button Command="{Binding ShowPageBCommand}" Text="Navigate to Page B" />
    </VerticalStackLayout>
</ContentPage>